<div class="border-b border-gray-200 w-full">
    <div class="mx-auto grid grid-cols-1 md:grid-cols-2 gap-10 max-w-[1440px] px-10 py-10 md:py-20">
        <div class="col-span-1 flex flex-col justify-center">
            <div class="flex flex-col md:flex-row items-start md:items-center justify-start gap-2 md:gap-8 mb-8">
                {% for i in (1..3) %}
                    {% assign feature_key = 'feature_' | append: i %}
                    <div class="flex items-center gap-2">
                        <img alt="checkmark" class="w-6 h-6 hs-id-207d5334 hs-lazyload" height="20" loading="lazy" src="{{ 'check-mark-solar.png' | asset_img_url }}" width="20"/>
                        <span class="uppercase font-medium text-gray-500">{{ section.settings[feature_key] | strip }}</span>
                    </div>
                {% endfor %}
            </div>
            <h3>{{ section.settings.heading }}</h3>
            <p class="text-gray-500 mt-5 leading-10">{{ section.settings.description }}</p>
            <a class="bg-[#F0942D] block w-64 mt-10 text-center font-medium text-white px-5 py-3 rounded-md" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
        </div>
        <div class="col-span-1">
            <img alt="Solar Course" class="w-full object-contain hs-id-207d5334 hs-lazyload" height="1000" loading="lazy" src="{{ section.settings.hero_image | img_url: 'master' }}" width="1000"/>
        </div>
    </div>
</div>