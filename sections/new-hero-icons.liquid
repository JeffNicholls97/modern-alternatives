                "default": "#222F3F"
            },
            {
                "type": "link_list",
                "id": "menu",
                "label": "Menu"
            },
            {
                "type": "text",
                "id": "hero_main_header",
                "label": "Heading",
                "default": "Going Solar Has Never Been So Simple, Transparent & Affordable."
            },
            {
                "type": "select",
                "id": "text_alignment",
                "label": "Hero Text Alignment",
                "options": [
                    {
                        "value": "left",
                        "label": "Left"
                    },
                    {
                        "value": "middle",
                        "label": "Middle"
                    }
                ],
                "default": "middle"
            },
            {
                "type": "text",
                "id": "hero_quote_btn",
                "label": "First Button Text",
                "default": "Get Quote"
            },
            {
                "type": "url",
                "id": "first_button_link",
                "label": "First Button Link"
            },
            {
                "type": "text",
                "id": "hero_shop_btn",
                "label": "Second Button Text",
                "default": "Shop Store"
            },
            {
                "type": "url",
                "id": "second_button_link",
                "label": "Second Button Link"
            },
            {
                "type": "color",
                "id": "icons_color",
                "label": "Icons Color",
                "default": "#000000"
            },
            {
                "type": "color",
                "id": "bellow_layer_color",
                "label": "Color Bellow Layer",
                "default": "#ffffff"
            },
            {
                "type": "range",
                "id": "bellow_layer",
                "min": 0,
                "max": 100,
                "step": 10,
                "label": "Opacity Bellow Layer",
                "default": 20
            },
            {
                "type": "checkbox",
                "id": "layer_opacity",
                "label": "Show Transparent Layer Bellow Icons",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "show_icons",
                "label": "Don't Show Icons",
                "default": false
            }
    ],
    "presets": [
        {
            "name": "New Hero With Icons"
        }
    ]
}
{% endschema %}