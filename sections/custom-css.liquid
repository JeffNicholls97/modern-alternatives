        }
        .product-block--vendor:after {
            content: '';
            display: block;
            position: absolute;
            right: 0;
            top: 11px;
            width: 1px;
            height: 14px;
            background-color: black;
        }
        .product-block--sku {
            padding-left: 10px;
        }
        .product-block--vendor, .product-block--sku {
            display: inline-block;
        }
        .money.savings {
            display: inline;
        }
        .product__rating.rating.product_rating_bellow_20_mobile {
            display: none;
        }
