<div class="w-full relative z-10 pt-10 pb-10 md:pb-[10rem] bg-[#212936] rounded-tl-[50px] rounded-tr-[50px] -mt-10">
  <div class="mx-auto max-w-[1440px] flex items-center justify-center flex-col text-center">
    <h1 class="md:text-4xl text-3xl text-center text-white">{{ section.settings.hero-title }}</h1>
    <p class="md:w-[50%] w-full leading-6 text-center text-white">{{ section.settings.hero-paragraph }}</p>
  </div>
</div>
<div class="mx-auto hidden md:block relative rounded-lg border border-[#E8E8E8] z-10 max-w-[1440px] bg-white -mt-24">
  <div class="w-full grid grid-cols-4 relative divide-y divide-gray-200">
    <div class="absolute w-1/4 h-full right-[25%] border-4 rounded-tr-lg border-[#ff991c] pointer-events-none shadow-[0px_0px_16.2px_4.5px_rgba(255,153,0,0.25)]"></div>
    {% comment %} <div class="absolute w-1/4 h-full right-[50%] border-4 rounded-tr-lg !border-[#212936] pointer-events-none shadow-[0px_0px_16.2px_4.5px_rgba(11,31,55,0.25)]"></div> {% endcomment %}
    <div class="col-span-1 header bg-[#F7F7F7] py-5 px-5 font-bold flex items-center text-xl">Features</div>
    <div class="col-span-1 header bg-[#212936] text-center text-white py-5 px-5 font-bold text-xl">Without<br> ShopGuard Membership</div>
    <div class="col-span-1 header text-center relative bg-[#ff991c] py-5 px-5 font-bold text-white text-xl">Free ShopGuard                 
      Lifetime Membership
    </div>
    <div class="col-span-1 flex items-center justify-center flex-col relative text-center header bg-[#F7F7F7] py-5 px-5 font-bold text-xl rounded-tr-lg">
      ShopGuard+ Membership
      <span class="text-sm !text-gray-500">*Coming 2025 (Paid)</span>
    </div>
    {% for block in section.blocks %}
      <div class="col-span-1 bg-white py-5 px-5 flex items-center leading-5 font-bold text-base">{{ block.settings.feature }}</div>
      <div class="col-span-1 bg-white py-5 px-5 leading-5 font-normal text-base flex items-center gap-5">
        {% if block.settings.feature_icon_row_1 == 'tick' %}
          <img
            class="w-6 h-6 object-center object-contain"
            width="50"
            height="50"
            src="{{ 'solarguard-tick.png' | asset_url }}"
            alt="ShopGuard tick">
          {{ block.settings.feature_description_row_1 }}
        {% else %}
          <img
            class="w-6 h-6 object-center object-contain"
            width="50"
            height="50"
            src="{{ 'solarguard-cross.png' | asset_url }}"
            alt="ShopGuard cross">
          Not Included
        {% endif %}

      </div>
      <div class="col-span-1 bg-white py-5 px-5 leading-5 font-normal text-base flex items-center gap-5">
        {% if block.settings.feature_icon_row_2 == 'tick' %}
          <img
            class="w-6 h-6 object-center object-contain"
            width="50"
            height="50"
            src="{{ 'solarguard-tick.png' | asset_url }}"
            alt="ShopGuard tick">
          {{ block.settings.feature_description_row_2 }}
        {% else %}
          <img
            class="w-6 h-6 object-center object-contain"
            width="50"
            height="50"
            src="{{ 'solarguard-cross.png' | asset_url }}"
            alt="ShopGuard cross">
          Not Included
        {% endif %}

      </div>
      <div class="col-span-1 bg-white py-5 px-5 leading-5 font-normal text-base flex items-center gap-5">
        {% if block.settings.feature_icon_row_3 == 'tick' %}
          <img
            class="w-6 h-6 object-center object-contain"
            width="50"
            height="50"
            src="{{ 'solarguard-tick.png' | asset_url }}"
            alt="ShopGuard tick">
          {{ block.settings.feature_description_row_3 }}
        {% else %}
          <img
            class="w-6 h-6 object-center object-contain"
            width="50"
            height="50"
            src="{{ 'solarguard-cross.png' | asset_url }}"
            alt="ShopGuard cross">
          Not Included
        {% endif %}

      </div>
    {% endfor %}
  </div>
</div>
<div>
  <div class="swiper-container md:hidden gallery-thumbs">
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <div class="swiper-slide-container bg-[#F7F7F7] border border-[#E8E8E8] flex items-center justify-between py-5 px-5 font-bold text-xl">Without ShopGuard Membership
          <dotlottie-player
            src="https://lottie.host/3b4f7c93-0398-4290-8a9d-f77dbd5166eb/2URbimEk3i.lottie"
            background="transparent"
            speed="1"
            style="width: 50px; height: 50px"
            loop
            class="absolute right-0 top"
            autoplay></dotlottie-player>
        </div>
      </div>
      <div class="swiper-slide">
        <div class="swiper-slide-container bg-[#ff991c] border border-[#E8E8E8] text-white text-center py-5 px-5 font-bold text-xl">ShopGuard
          <span class="underline">Free</span>
          Lifetime Membership</div>
      </div>
      <div class="swiper-slide relative">
        <div class="swiper-slide-container bg-[#F7F7F7] border border-[#E8E8E8] text-[#ff991c] py-5 px-5 text-center font-bold text-xl">ShopGuard+ Lifetime Membership</div>
      </div>
    </div>
  </div>
</div>
<div class="block md:hidden">
  <div class="swiper mySwiper gallery-top">
    <div class="swiper-wrapper">
      <div class="swiper-slide rounded-md overflow-hidden py-10 bg-gray-100">
        {% for block in section.blocks %}
          <div class="mb-5">
            <div class="w-full flex items-center uppercase text-gray-500 text-xs justify-start px-10 font-bold">{{ block.settings.feature }}</div>
            <div class="flex items-center px-10 justify-start py-2 gap-3">
              {% if block.settings.feature_icon_row_1 == 'tick' %}
                <img
                  class="w-6 h-6 object-center object-contain"
                  width="50"
                  height="50"
                  src="{{ 'solarguard-tick.png' | asset_url }}"
                  alt="ShopGuard tick">
                {{ block.settings.feature_description_row_1 }}
              {% else %}
                <img
                  class="w-6 h-6 object-center object-contain"
                  width="50"
                  height="50"
                  src="{{ 'solarguard-cross.png' | asset_url }}"
                  alt="ShopGuard cross">
                Not Included
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-slide rounded-md overflow-hidden py-10 bg-gray-100">
        {% for block in section.blocks %}
          <div class="mb-5">
            <div class="w-full flex items-center uppercase text-gray-500 text-xs justify-start px-10 font-bold">{{ block.settings.feature }}</div>
            <div class="flex items-center px-10 justify-start py-2 gap-3">
              {% if block.settings.feature_icon_row_2 == 'tick' %}
                <img
                  class="w-6 h-6 object-center object-contain"
                  width="50"
                  height="50"
                  src="{{ 'solarguard-tick.png' | asset_url }}"
                  alt="ShopGuard tick">
                {{ block.settings.feature_description_row_2 }}
              {% else %}
                <img
                  class="w-6 h-6 object-center object-contain"
                  width="50"
                  height="50"
                  src="{{ 'solarguard-cross.png' | asset_url }}"
                  alt="ShopGuard cross">
                Not Included
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-slide rounded-md overflow-hidden py-5 bg-gray-100">
        <div class="flex items-center gap-1 px-10 pb-5">
          <span class="bg-yellow-100 text-yellow-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded">Coming Soon</span>
          <span class="bg-yellow-100 text-yellow-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded">Paid Plan</span>
        </div>
        {% for block in section.blocks %}
          <div class="mb-5">
            <div class="w-full flex items-center uppercase text-gray-500 text-xs justify-start px-10 font-bold">{{ block.settings.feature }}</div>
            <div class="flex items-center px-10 justify-start py-2 gap-3">
              {% if block.settings.feature_icon_row_3 == 'tick' %}
                <img
                  class="w-6 h-6 object-center object-contain"
                  width="50"
                  height="50"
                  src="{{ 'solarguard-tick.png' | asset_url }}"
                  alt="ShopGuard tick">
                {{ block.settings.feature_description_row_3 }}
              {% else %}
                <img
                  class="w-6 h-6 object-center object-contain"
                  width="50"
                  height="50"
                  src="{{ 'solarguard-cross.png' | asset_url }}"
                  alt="ShopGuard cross">
                Not Included
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<div class="mx-auto max-w-[1440px] py-10 text-center">
  <button x-on:click="modalEnablePage = true" class="bg-[#ff991c] text-white px-10 py-5 inline-block rounded-md font-bold">{{ section.settings.button-text }}</button>
</div>

<script>
    var galleryTop = new Swiper(".gallery-top", {
      centeredSlides: true,
      slidesPerView: '1',
      touchRatio: 0.5,
    });

    var galleryThumbs = new Swiper('.gallery-thumbs', {
      centeredSlides: true,
      slidesPerView: '1',
      touchRatio: 0.5,
      slideToClickedSlide: true,
    });
    galleryTop.controller.control = galleryThumbs;
    galleryThumbs.controller.control = galleryTop;
</script>

{% schema %}
  {
    "name": "ShopGuard Features",
    "settings": [
      {
        "type": "text",
        "id": "hero-title",
        "label": "Enter title",
        "default": "ShopGuard Membership Program"
      }, {
        "type": "textarea",
        "id": "hero-paragraph",
        "label": "Enter paragraph",
        "default": "Power your off-grid lifestyle with ShopGuard Membership. Enjoy lifetime support, extended returns, exclusive rewards, and partner discounts. Join now for unmatched benefits in sustainable living."
      }, {
        "type": "text",
        "id": "button-text",
        "label": "enter button title",
        "default": "Start Your Free Membership"
      }, {
        "type": "url",
        "id": "button-url",
        "label": "Choose button link"

      }
    ],
    "blocks": [
      {
        "type": "feature_block",
        "name": "Feature Block",
        "settings": [
          {
            "type": "text",
            "id": "feature",
            "label": "Enter Feature"
          },
          {
            "type": "select",
            "id": "feature_icon_row_1",
            "label": "Select icon row 1",
            "options": [
              {
                "value": "tick",
                "label": "Tick"
              }, {
                "value": "cross",
                "label": "Cross"
              }
            ],
            "default": "tick"
          },
          {
            "type": "textarea",
            "id": "feature_description_row_1",
            "label": "Row 1 feature",
            "default": "Enter your feature description here."
          },
          {
            "type": "select",
            "id": "feature_icon_row_2",
            "label": "Select icon row 2",
            "options": [
              {
                "value": "tick",
                "label": "Tick"
              }, {
                "value": "cross",
                "label": "Cross"
              }
            ],
            "default": "tick"
          }, {
            "type": "textarea",
            "id": "feature_description_row_2",
            "label": "Row 2 feature",
            "default": "Enter your feature description here."
          }, {
            "type": "select",
            "id": "feature_icon_row_3",
            "label": "Select icon row 3",
            "options": [
              {
                "value": "tick",
                "label": "Tick"
              }, {
                "value": "cross",
                "label": "Cross"
              }
            ],
            "default": "tick"
          }, {
            "type": "textarea",
            "id": "feature_description_row_3",
            "label": "Row 3 feature",
            "default": "Enter your feature description here."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "ShopGuard Features",
        "category": "Custom"
      }
    ]
  }
{% endschema %}